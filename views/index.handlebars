<div class="row">
  <div class="col-lg-2 d-xs-none">

  </div>
  <div class="col-lg-4">
    <h4> Ready to eat!</h4>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{name}}
      </li>
      <button class="change-devoured" data-id="{{id}}" value="1">
          Devour me
        </button>

        <button class="delete-burger" data-id="{{this.id}}">Remove</button>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-lg-4">
    <h4>Devoured BurgerZ!</h4>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{name}}
        
      </li>
<button class="change-devoured" data-id="{{id}}" value="0">Cook again</button>
        <button class="delete-burger" data-id="{{this.id}}">Remove</button>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-lg-2 d-xs-none">

  </div>
  <div class="col-lg-6">
<h4>Add a burger</h4>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <br>
    <input type="text" id="bur" name="name">
  </div>

  <div class="form-group">
    <input type="radio" name="devouredButton" value="1" checked>Devoured<br>
    <input type="radio" name="devouredButton" value="0"> Ready to Eat
  </div>

  <button type="submit" >Add Burger</button>
</form>

  </div>
</div>